<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="max-w-md w-full bg-white rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-bold text-center mb-2">パスワード再設定</h2>
    <p class="text-sm text-gray-600 text-center mb-6">
      登録済みのメールアドレスに再設定用のリンクを送信します。
    </p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <% if resource.errors.any? %>
        <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-md">
          <h3 class="text-sm font-medium text-red-800 mb-2">
            <%= resource.errors.count %>件のエラーが発生しました:
          </h3>
          <ul class="list-disc list-inside text-sm text-red-700">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            value: params[:email] || resource.email,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.button "再設定メールを送信", type: :submit,
            class: "btn-submit w-full px-4 py-2 text-white bg-blue-500 rounded-md hover:bg-blue-600 hover:text-white transition-colors font-medium" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-600">
      <%= link_to "ログイン", new_session_path(resource_name), class: "text-green-500 hover:underline" %> |
      <%= link_to "新規登録", new_registration_path(resource_name), class: "text-orange-500 hover:underline" %>
    </div>
  </div>
</div>
