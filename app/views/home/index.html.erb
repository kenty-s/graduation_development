<!-- ホーム画面 -->
<div class="w-full max-w-6xl mx-auto px-4">
  <!-- タイトルセクション -->
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold mb-4">今日は何を食べたいですか？</h1>
    <p class="text-lg text-gray-600">
      「何食べたい？」と聞かれても答えられない…<br>
      そんな時は、あなたの気分を選ぶだけ。最短5秒で「食べたい」にたどり着けます。
    </p>
  </div>

  <!-- 基本選択 -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
    <!-- ガッツリ -->
    <div class="bg-orange-50 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-orange-200 p-8">
    <!-- アイコン -->
      <div class="flex justify-center mb-4">
        <%= image_tag 'gattsuri.png', class: 'w-16 h-16 object-contain' %>
      </div>
      
      <h3 class="text-2xl font-bold mb-2 text-center text-gray-800">ガッツリ</h3>
      <p class="text-gray-600 text-sm text-center mb-6">
        お腹いっぱい食べたい！<br>
        ボリューム満点の料理
      </p>

      <!-- バッジ -->
      <div class="flex justify-center gap-2 mb-8 flex-wrap">
        <span class="px-3 py-1 bg-orange-100 text-orange-700 rounded-full text-sm font-medium">とんかつ</span>
        <span class="px-3 py-1 bg-orange-100 text-orange-700 rounded-full text-sm font-medium">ステーキ</span>
        <span class="px-3 py-1 bg-orange-100 text-orange-700 rounded-full text-sm font-medium">カレー</span>
      </div>

      <!-- ボタン -->
      <div class="space-y-3">
        <%= link_to "詳細条件を設定する(MVP後遷移予定)", "#", 
            class: "block w-full py-2.5 px-4 text-sm text-gray-500 bg-gray-100 rounded-lg text-center border border-gray-200",
            onclick: "return false;" %>

        <%= form_with url: result_path, method: :post, local: true, class: "w-full" do |form| %>
          <%= form.hidden_field :category, value: "ガッツリ" %>
          <%= form.submit "この気分で検索",
              class: "block w-full py-2.5 px-4 text-sm text-orange-700 font-bold bg-orange-100 hover:bg-orange-200 rounded-lg text-center border border-orange-300 cursor-pointer transition-all duration-200" %>
        <% end %>
      </div>
    </div>

    <!-- サッパリ -->
    <div class="bg-green-50 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 border border-green-200 p-8">
    <!-- アイコン -->
      <div class="flex justify-center mb-4">
        <%= image_tag 'sappari.png', class: 'w-16 h-16 object-contain' %>
      </div>
      
      <h3 class="text-2xl font-bold mb-2 text-center text-gray-800">サッパリ</h3>
      <p class="text-gray-600 text-sm text-center mb-6">
        軽やかに食べたい！<br>
        あっさりとした料理
      </p>

      <!-- バッジ -->
      <div class="flex justify-center gap-2 mb-8 flex-wrap">
        <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">そば</span>
        <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">サラダ</span>
        <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">スープ</span>
      </div>

      <!-- ボタン -->
      <div class="space-y-3">
        <%= link_to "詳細条件を設定する(MVP後遷移予定)", "#", 
            class: "block w-full py-2.5 px-4 text-sm text-gray-500 bg-gray-100 rounded-lg text-center border border-gray-200",
            onclick: "return false;" %>

        <%= form_with url: result_path, method: :post, local: true, class: "w-full" do |form| %>
          <%= form.hidden_field :category, value: "サッパリ" %>
          <%= form.submit "この気分で検索", 
              class: "block w-full py-2.5 px-4 text-sm text-green-700 font-bold bg-green-100 hover:bg-green-200 rounded-lg text-center border border-green-300 cursor-pointer transition-all duration-200" %>
        <% end %>
      </div>
    </div>

  </div>
</div>